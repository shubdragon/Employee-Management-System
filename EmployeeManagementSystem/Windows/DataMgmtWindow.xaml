<Controls:MetroWindow x:Class="EmployeeManagementSystem.Windows.DataMgmtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagementSystem.Windows"
        xmlns:CSlocal="clr-namespace:EmployeeManagementSystem"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"                      
        xmlns:ewt="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d" x:Name="Mathematics"
        Closing="Window_Closing"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Title="Employee Data" Height="680" Width="1024" WindowState="Maximized">
    <Window.Resources>
        <CSlocal:TotalConverter x:Key="TotalConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>

    <!--#region Background-->
    <Window.Background>
        <ImageBrush ImageSource="/Assets/background.jpg" />
    </Window.Background>
    <!--#endregion-->

    <!--#region TitleBar-->
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="EstNameTextBox" Height="18" Width="Auto" Background="Transparent" FontWeight="DemiBold" BorderThickness="0" Foreground="#FFD1E8F1" TextAlignment="Right" Controls:TextBoxHelper.Watermark="Enter Establishment name"/>
                <Button x:Name="HeaderEstNameUpdate" Cursor="Hand" Click="HeaderEstNameUpdate_Click">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="20" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_disk_upload}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <Button x:Name="HeaderRefreshButton" Cursor="Hand" Click="HeaderRefreshButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                   Height="20"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_refresh_clockwise_down}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4,0,0,0"
                   VerticalAlignment="Center"
                   Text="Refresh" />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <!--#endregion-->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Top-->        
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Grid.Row="0" Source="/Assets/logo.png" Margin="5" Height="50"/>
            <TextBlock Grid.Column="1" Grid.Row="0" Margin="5" Text="Employee Data"
                       FontSize="20" TextAlignment="Justify" VerticalAlignment="Center"
                       FontWeight="DemiBold" Foreground="#ffd03438"/>

            <StackPanel x:Name="LogoutButton" Grid.Column="2" Grid.Row="0" Cursor="Hand" Margin="5" MouseDown="LogoutButton_MouseDown">
                <TextBlock FontFamily="Segoe MDL2 Assets"                       
                           Text="&#xE7E8;" 
                           FontSize="25" 
                           Foreground="#ffd03438"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"          
                           Cursor="Hand" />
                <TextBlock FontSize="15" Foreground="#ffd03438" Text="Logout" VerticalAlignment="Top" />
            </StackPanel>

            <Border Grid.Row="1" Grid.ColumnSpan="3" BorderBrush="DarkGray" BorderThickness="0.5"/>
        </Grid>        
        <!--#endregion-->
        
        <Grid Grid.Row="1">
            <Controls:MetroAnimatedTabControl>
                <!--#region Tab1-->
                <Controls:MetroTabItem Cursor="Hand">
                    <TabItem.Header>
                        <DockPanel LastChildFill="True">
                            <Rectangle DockPanel.Dock="Left" Margin="0,0,5,0" Width="20" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_draw_marker}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Label Padding="0" Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.FontSize)}">
                                Main
                            </Label>
                        </DockPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.Background>
                            <ImageBrush ImageSource="/Assets/background.jpg" />
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Viewbox Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" MaxHeight="200">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Vertical">
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" Grid.Row="0" Margin="10" Content="Employee Code:" VerticalAlignment="Center" FontSize="13"  Background="White"/>
                                        <TextBox x:Name="EidTextBox" Grid.Column="1" Grid.Row="0" Controls:TextBoxHelper.ClearTextButton="True" Width="200" Controls:TextBoxHelper.Watermark="Once add can't be edit" Margin="5" HorizontalAlignment="Stretch" MinHeight="20" MaxHeight="25" FontSize="13" PreviewTextInput="EidTextBox_PreviewTextInput"/>

                                        <Label Grid.Column="0" Grid.Row="1" Content="Name:" Margin="10" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                        <TextBox x:Name="NameTextBox" Grid.Column="1" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Controls:TextBoxHelper.ClearTextButton="True"/>

                                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Father/Husband Name: " Margin="10" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                        <TextBox x:Name="FHTextBox" Grid.Column="1" Grid.Row="2" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Controls:TextBoxHelper.ClearTextButton="True"/>

                                        <Label Grid.Column="0" Grid.Row="3" Margin="10" Content="Gender:" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                        <ComboBox x:Name="GenderComboBox" Grid.Column="1" Grid.Row="3" Margin="5"  HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Cursor="Hand">
                                            <ComboBoxItem Content="Male"/>
                                            <ComboBoxItem Content="Female"/>
                                            <ComboBoxItem Content="Other"/>
                                        </ComboBox>

                                    </Grid>
                                </StackPanel>

                                <Viewbox>
                                    <StackPanel Orientation="Vertical">
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0" Grid.Row="0" Margin="5,10" Content="ESIC IP No.:" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                            <TextBox x:Name="EsicTextBox" Grid.Column="1" Grid.Row="0" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Controls:TextBoxHelper.ClearTextButton="True" PreviewTextInput="EidTextBox_PreviewTextInput"/>

                                            <Label Grid.Column="0" Grid.Row="1" Margin="5,10" Content="Mobile No.:" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                            <TextBox x:Name="MobileTextBox" Grid.Column="1" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Controls:TextBoxHelper.Watermark="10 digit mobile no." MaxLength="10" Controls:TextBoxHelper.ClearTextButton="True" PreviewTextInput="EidTextBox_PreviewTextInput"/>

                                            <Label Grid.Column="0" Grid.Row="2" Margin="5,10" Content="Aadhaar No.: " VerticalAlignment="Center" FontSize="13" Background="White"/>
                                            <ewt:MaskedTextBox x:Name="AadhaarTextBox" Grid.Column="1" Grid.Row="2" MaxLength="14" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Mask="0000-0000-0000"/>

                                            <Label Grid.Column="0" Grid.Row="3" Content="UAN No.:" Margin="5,10" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                            <TextBox x:Name="UanTextBox" Grid.Column="1" Grid.Row="3" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Controls:TextBoxHelper.ClearTextButton="True" PreviewTextInput="EidTextBox_PreviewTextInput"/>
                                        </Grid>
                                    </StackPanel>
                                </Viewbox>

                                <StackPanel Orientation="Vertical">
                                    <Grid Margin="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" Grid.Row="0" Margin="10" Content="Email:" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                        <TextBox x:Name="EmailTextBox" Grid.Column="1" Grid.Row="0" Controls:TextBoxHelper.Watermark="someone@email.com" Controls:TextBoxHelper.ClearTextButton="True" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" />

                                        <Label Grid.Column="0" Grid.Row="1" Margin="10" Content="Date Of Joining:" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                        <ewt:MaskedTextBox x:Name="DojTextBox" Grid.Column="1" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Mask="00-00-0000" ToolTipService.InitialShowDelay="200" ToolTipService.ShowDuration="3000" ToolTipService.BetweenShowDelay="10000" ToolTip="dd-mm-yyyy"/>

                                        <Label Grid.Column="0" Grid.Row="2" Margin="10" Content="Date Of Leaving: " VerticalAlignment="Center" FontSize="13" Background="White"/>
                                        <ewt:MaskedTextBox x:Name="DolTextBox" Grid.Column="1" Grid.Row="2" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Mask="00-00-0000" ToolTipService.InitialShowDelay="200" ToolTipService.ShowDuration="3000" ToolTipService.BetweenShowDelay="10000" ToolTip="dd-mm-yyyy"/>

                                        <Label Grid.Column="0" Grid.Row="3" Margin="10" Content="Date Of Birth:" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                        <ewt:MaskedTextBox x:Name="DobTextBox" Grid.Column="1" Grid.Row="3" Margin="5" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Mask="00-00-0000" ToolTipService.InitialShowDelay="200" ToolTipService.ShowDuration="3000" ToolTipService.BetweenShowDelay="10000" ToolTip="dd-mm-yyyy"/>
                                    </Grid>
                                </StackPanel>

                                <WindowsFormsHost Height="140" Width="120" Visibility="Hidden">
                                    <wf:PictureBox x:Name="ResizerEmpPictureBox" SizeMode="Zoom" x:FieldModifier="public"/>
                                </WindowsFormsHost>
                            </StackPanel>
                        </Viewbox>

                        <Grid Grid.Row="1" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Viewbox Grid.Column="0" Margin="0,0,5,0" MaxHeight="160" VerticalAlignment="Top" HorizontalAlignment="Left">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0" Grid.Row="0" Content="Relation:" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="13" Width="65" Background="White"/>
                                    <ComboBox x:Name="RelationComboBox" Grid.Column="1" Grid.Row="0" Margin="0,10" Width="200" MinHeight="20" MaxHeight="25" FontSize="13" Cursor="Hand">
                                        <ComboBoxItem Content="Father"/>
                                        <ComboBoxItem Content="Spouse"/>
                                    </ComboBox>

                                    <Label Grid.Column="2" Grid.Row="0" Content="IFSC:" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="13" Width="65" Background="White"/>
                                    <TextBox x:Name="IFSCTextBox" Grid.Column="3" Grid.Row="0" Margin="0,10" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13"/>

                                    <Label Grid.Column="4" Grid.Row="0" Content="A/c no.:" Margin="0,10" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="13" Width="65" Background="White"/>
                                    <TextBox x:Name="AcTextBox" Grid.Column="5" Grid.Row="0" MinWidth="275"  MaxWidth="445" MinHeight="20" MaxHeight="25" FontSize="13" Controls:TextBoxHelper.Watermark="Account no. can be of maximum 19 digits" Controls:TextBoxHelper.ClearTextButton="True" PreviewTextInput="EidTextBox_PreviewTextInput"/>

                                    <!-- Column 0 , Column 1 Available -->

                                    <Label Grid.Column="0" Grid.Row="1" Content="Role:" Margin="0,15" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                    <TextBox x:Name="RoleTextBox" Grid.Column="1" Grid.Row="1" Margin="0,15" HorizontalAlignment="Stretch" Width="200" MinHeight="20" MaxHeight="25" FontSize="13"/>


                                    <Label Grid.Column="2" Grid.Row="1" Margin="10,10" Content="Address:" VerticalAlignment="Center" FontSize="13" Background="White" HorizontalAlignment="Right"/>
                                    <TextBox x:Name="AddressTextBox" Grid.Column="3" Grid.ColumnSpan="5" Grid.Row="1" Grid.RowSpan="2" Margin="10,10" HorizontalAlignment="Left" Width="455" Height="80" FontSize="13" TextWrapping="Wrap"/>

                                    <Label Grid.Column="0" Grid.Row="2" Margin="10" Content="Search:" Foreground="DodgerBlue" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="13" Background="White"/>
                                    <TextBox x:Name="SearchTextBox" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalContentAlignment="Center" BorderBrush="DodgerBlue" BorderThickness="2" Height="25" Width="280" FontWeight="DemiBold" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Type Employee Name" TextChanged="SearchTextBox_TextChanged"/>
                                </Grid>
                            </Viewbox>

                            <Viewbox Grid.Column="1" MaxHeight="160" Margin="5,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" BorderThickness="1" BorderBrush="Black">
                                        <!-- <Image x:Name="EmpImage"  Height="120" Width="100" Stretch="Uniform" Cursor="Hand"/> -->
                                        <WindowsFormsHost Height="120" Width="100">
                                            <wf:PictureBox x:Name="EmpPictureBox" SizeMode="Zoom" x:FieldModifier="public"/>
                                        </WindowsFormsHost>
                                    </Border>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Border Height="30" Width="32" Margin="1" CornerRadius="2" BorderBrush="CornflowerBlue" BorderThickness="1" HorizontalAlignment="Center">
                                            <Button x:Name="BrowseButton" Cursor="Hand" IsEnabled="False" FontFamily="Segoe MDL2 Assets" Content="&#xE898;" FontSize="20" Style="{StaticResource UploadButtonStyle}" Click="BrowseButton_Click"/>
                                        </Border>
                                        <Border Height="30" Width="32" Margin="1" CornerRadius="2" BorderBrush="IndianRed" BorderThickness="1" HorizontalAlignment="Center">
                                            <Button x:Name="RemoveButton" Cursor="Hand" IsEnabled="False" FontFamily="Segoe MDL2 Assets" Content="&#xE107;" FontSize="20" Style="{StaticResource DeleteButtonStyle}" Click="RemoveButton_Click"/>
                                        </Border>
                                        <Border Height="30" Width="32" Margin="1" CornerRadius="2" BorderBrush="Green" BorderThickness="1" HorizontalAlignment="Center">
                                            <Button x:Name="DownloadButton" Cursor="Hand" FontFamily="Segoe MDL2 Assets" Content="&#xE896;" FontSize="20" Style="{StaticResource DownloadButtonStyle}" Click="DownloadButton_Click"/>
                                        </Border>
                                    </StackPanel>

                                    <TextBlock x:Name="ImagePathTextBlock" Visibility="Collapsed"/>
                                </Grid>
                            </Viewbox>
                        </Grid>

                        <!-- Template and Picture -->
                        <Grid  Grid.Row="0" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Button x:Name="TemplateButton" Grid.Row="0" Background="#FF2077B2" Cursor="Hand" Height="80" Width="80" BorderBrush="#FF04558B" Style="{DynamicResource MetroCircleButtonStyle}" Click="TempleteButton_Click">
                                <StackPanel>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xF581;" Foreground="White" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Template"  FontSize="12" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="TemplateHelpButton" Grid.Row="1" Background="#FF2077B2" Cursor="Hand" Height="50" Width="50" FontFamily="Segoe MDL2 Assets" Content="&#xF142;" Foreground="White" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Center" BorderBrush="#FF04558B" Style="{DynamicResource MetroCircleButtonStyle}" Click="TemplateHelpButton_Click"/>
                        </Grid>

                        <!-- Picture Box Was Here-->

                        <Border x:Name="CameraBorder" Grid.Row="1" BorderBrush="#FF51A4EE" BorderThickness="2" CornerRadius="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Visibility="Collapsed">
                            <Grid Width="250" Background="AliceBlue">
                                <TextBlock x:Name="CameraCloseTextBlock" Text="X" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="18" FontWeight="ExtraBold" Foreground="Red" Margin="2" MouseDown="CameraCloseTextBlock_MouseDown"/>
                                <TextBlock Text="Image Upload Dialog" FontSize="18" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                                <TextBlock Text="Choose image source" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <Button x:Name="BrowseImageButton" Height="25" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Browse" Margin="5" Cursor="Hand" Click="BrowseImageButton_Click"/>
                                <Button x:Name="CameraButton" Height="25" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Camera" Margin="5" Cursor="Hand" Click="CameraButton_Click"/>
                            </Grid>
                        </Border>


                        <Viewbox Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Left" MaxHeight="45">
                            <StackPanel  Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="AddButton" Cursor="Hand" Content="Add" FontSize="15" Style="{StaticResource ButtonsButtonStyle}" Click="AddButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="SaveButton" Cursor="Hand" Content="Save" FontSize="15" IsEnabled="False" Style="{StaticResource ButtonsButtonStyle}" Click="SaveButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="EditButton" Cursor="Hand" Content="Edit" FontSize="15" Style="{StaticResource ButtonsButtonStyle}" Click="EditButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="UpdateButton" Cursor="Hand" Content="Update" FontSize="15" IsEnabled="False" Style="{StaticResource ButtonsButtonStyle}" Click="UpdateButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="DeleteButton" Cursor="Hand" Content="Delete" FontSize="15" Style="{StaticResource ButtonsButtonStyle}" Click="DeleteButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="PrevButton" Cursor="Hand" Content="Prev" FontSize="15" Style="{StaticResource ButtonsButtonStyle}" Click="PrevButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="NextButton" Cursor="Hand" Content="Next" FontSize="15" Style="{StaticResource ButtonsButtonStyle}" Click="NextButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="PrintButton" Cursor="Hand" Content="Print" FontSize="15" Style="{StaticResource ButtonsButtonStyle}" Click="PrintButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="ExportDataButton" Cursor="Hand" Content="Export Data" FontSize="15" Style="{StaticResource ButtonsButtonStyle}" Click="ExportDataButton_Click"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="#FF04558B" CornerRadius="2"  Width="100" Height="35" Margin="5">
                                    <Button x:Name="ImportDataButton" Cursor="Hand" Content="Import Data" FontSize="15" Style="{StaticResource ButtonsButtonStyle}" Click="ImportDataButton_Click"/>
                                </Border>
                            </StackPanel>
                        </Viewbox>


                        <!--
        <WindowsFormsHost Grid.Row="4">
            <wf:DataGridView x:Name="TableDataGrids" AutoGenerateColumns="True" CellContentClick="TableDataGrid_CellContentClick"/>
        </WindowsFormsHost>
        -->


                        <DataGrid x:Name="TableDataGrid" Grid.Row="3" AutoGenerateColumns="True" Style="{StaticResource AzureDataGrid}" SelectionChanged="TableDataGrid_SelectionChanged" />

                        <!--
                        <WindowsFormsHost Grid.Row="3" Visibility="Collapsed">
                            <wf:DataGridView x:Name="dgv" ColumnHeadersHeightSizeMode="AutoSize" />
                        </WindowsFormsHost>                        
                        -->
                    </Grid>
                </Controls:MetroTabItem>
                <!--#endregion-->

                <!--#region Tab2-->
                <Controls:MetroTabItem Cursor="Hand">
                    <TabItem.Header>
                        <DockPanel LastChildFill="True">
                            <Rectangle DockPanel.Dock="Left" Margin="0,0,5,0" Width="20" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_calendar_dollar}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Label Padding="0" Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.FontSize)}">
                                Salary Management
                            </Label>
                        </DockPanel>
                    </TabItem.Header>
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.Background>
                                <ImageBrush ImageSource="/Assets/background.jpg" />
                            </Grid.Background>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>                            

                            <Border Grid.Row="0" Background="#FF2BA8A8" Height="25" Width="300" CornerRadius="15" Margin="5" HorizontalAlignment="Left">
                                <TextBlock Text="Select Employee" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <Grid Grid.Row="1" Margin="5">                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Content="Employee Code:" FontWeight="Medium" FontSize="15" Margin="10" VerticalContentAlignment="Center"/>
                                <TextBox x:Name="EidSelectTextBox" Grid.Column="1" Margin="10" Height="25" Width="50" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" PreviewTextInput="GlobalTextBox_PreviewTextInput"/>
